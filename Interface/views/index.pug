extends layout

block content
  header.w3-indigo 
    h1 Plantas portuguesas [#{plantas.length} plantas]
  .w3-container
    table.w3-table-all
      tr
        th Id
        th Freguesia
        th Espécie
        th Estado
        th Número de intervenções
      each planta in plantas
        tr 
          td 
            a(href="/"+planta._id)= planta._id
          td= planta.Freguesia
          td
            a(href="/"+planta._id)= planta.Especie
          td= planta.Estado 
          td= planta.NumeroDeIntervencoes
      
  footer.w3-container.w3-indigo 
    address Generated by distribuição Arbórea nalgumas freguesias portuguesas :: EngWeb2023 #{d}
